<odoo>
    <data>
        <template id="stock_remito_header">
        <div>
            <div class="row">
                <!-- Left Upper Side: Company Logo -->
                <div name="left-upper-side" class="col-5" t-if="not pre_printed_report">
                    <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 45px;" alt="Logo"/>
                </div>
                
                <!-- Center Upper: Document Letter and Legend -->
                <div name="center-upper" class="col-2 text-center" t-att-style="'color: %s;' % o.company_id.primary_color">
                    <span style="display: inline-block; text-align: center; line-height: 8px;">
                        <h1 style="line-height: 35px;">
                            <strong><span t-out="not pre_printed_report and document_letter or ' '"/></strong>
                        </h1>
                        <span style="font-size: x-small;" t-out="not pre_printed_report and document_legend or ' '"/>
                    </span>
                </div>
                
                <!-- Right Upper Side: Document Title -->
                <div name="right-upper-side" class="col-5 text-end" style="padding-left: 0px;" t-if="not pre_printed_report">
                    <h4 t-att-style="'color: %s;' % o.company_id.primary_color"><strong>
                        <span t-out="report_name"/>
                    </strong></h4>
                </div>
            </div>
            <div class="row">
                <!-- Left Side: Company Information -->
                <div class="col-6" style="padding-right: 0px;">
                    <t t-if="not pre_printed_report">
                        <span t-field="o.company_id.partner_id.name"/><br/>
                        <div/>
                        <t t-out="' - '.join([item for item in [', '.join([header_address.street, header_address.street2] if item), header_address.city, header_address.state_id and header_address.state_id.name, header_address.zip, header_address.country_id and header_address.country_id.name] if item])"/>
                        <span t-if="header_address.phone"> - </span><span t-if="header_address.phone" style="white-space: nowrap;" t-out="'Tel: ' + header_address.phone"/><br/>
                        <span t-att-style="'color: %s;' % o.company_id.primary_color" t-out="' - '.join([item for item in [(header_address.website or '').replace('https://', '').replace('http://', ''), header_address.email] if item])"/>
                    </t>
                </div>
                
                <!-- Right Side: Document and Company Tax Information -->
                <div class="col-6 text-end" style="padding-left: 0px;">
                    <t t-if="not pre_printed_report">
                        <span t-att-style="'color: %s;' % o.company_id.secondary_color">Nro: </span><span t-out="report_number"/><br/>
                        <span t-att-style="'color: %s;' % o.company_id.secondary_color">Date: </span><span t-out="report_date" t-options="{&quot;widget&quot;: &quot;date&quot;}"/><br/>
                        <span t-field="o.company_id.l10n_ar_afip_responsibility_type_id"/><span t-att-style="'color: %s;' % o.company_id.secondary_color"> - CUIT: </span><span t-field="o.company_id.partner_id.l10n_ar_formatted_vat"/><br/>
                        <span t-att-style="'color: %s;' % o.company_id.secondary_color">IIBB: </span><span t-out="o.company_id.l10n_ar_gross_income_type == 'exempt' and 'Exento' or o.company_id.l10n_ar_gross_income_number"/><span t-att-style="'color: %s;' % o.company_id.secondary_color"> - Activities Start: </span><span t-field="o.company_id.l10n_ar_afip_start_date"/>
                    </t>
                </div>
            </div>
        </div>
    </template>
    </data>
</odoo>